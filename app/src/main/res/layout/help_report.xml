<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/asBuyer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="as a BUYER"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp">
            <TextView
                android:id="@+id/asOwner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="as an OWNER"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell Us What Happened"
            android:textSize="15dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:hint="Tell us what steps you have taken and the reponses you have received."
                android:textSize="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:padding="10dp"
                android:textColor="@color/input"
                android:background="@color/white"
                android:textColorHint="@color/input_hint"
                android:maxLength="2000"
                android:maxLines="10"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSendReport"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@color/btn_bg"
            android:text="send"
            android:textStyle="bold"
            android:textColor="@color/btn_text"
            android:layout_marginLeft="300dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We are really sorry, but unfortunately all of the transactions that you arrange privately with a user via Bank Transfer are not recorded in our system and, for this reason, are not covered by Buyer Protection."
            android:textSize="10dp"
            android:textAlignment="inherit" />

        </LinearLayout>

</LinearLayout>